# ==========================================
# АУТЕНТИФИКАЦИЯ
# ==========================================
# Секрет для соли и аутентификации: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET="****"

# Для Docker deployment с HTTP (localhost)
# Установите false чтобы cookies работали через HTTP
# В production с HTTPS не указывайте или установите true
SECURE_COOKIES=false

# Доверять host header (нужно для Docker/прокси)
AUTH_TRUST_HOST=true

# ==========================================
# AI МОДЕЛИ (OpenAI-совместимый API)
# ==========================================

# Url и токен поставщика Моделей
OPENAI_BASE_URL="****"
OPENAI_API_KEY="****"

# Названия моделей (отображаются в UI)
CHAT_MODEL_TITLE="Qwen3 32B"
REASONING_MODEL_TITLE="Qwen3 32B Thinking"

# ID моделей для API
CHAT_MODEL="qwen/qwen3-32b"
REASONING_MODEL="qwen/qwen3-32b"
TITLE_MODEL="qwen/qwen3-32b"
ARTIFACT_MODEL="qwen/qwen3-32b"

# ==========================================
# БАЗА ДАННЫХ (PostgreSQL)
# ==========================================
POSTGRES_URL="****"

# ==========================================
# КЭШИРОВАНИЕ (Redis - опционально)
# ==========================================
REDIS_URL="****"

# ==========================================
# ХРАНИЛИЩЕ ФАЙЛОВ (MinIO)
# ==========================================

MINIO_ENDPOINT=
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=

# ==========================================
# SSL/TLS НАСТРОЙКИ
# ==========================================
# Отключение проверки SSL для самоподписанных сертификатов
# ВНИМАНИЕ: Используйте только в development/внутренней сети!
NODE_TLS_REJECT_UNAUTHORIZED=0